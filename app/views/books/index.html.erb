<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Library</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.name %></td>
      <td><%= book.library %></td>

      <% if can? :read, book %>
        <td><%= link_to 'Show', book %></td>
      <% end %>

      <% if can? :update, book %>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <% end %>

      <% if can? :destroy, book %>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path if can? :manage, Book.new(library_id: current_user.library_id) %>
